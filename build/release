#!/usr/bin/env bash

cd "$(dirname "${BASH_SOURCE[0]}")/../lib" || exit 1
source ../modern.sh

outfile="../modern.sh"

say "building new monolithic library..."
setup() { echo > ,; esc="$(printf '\033')"; }
teardown() { rm ,; }
compile() {
  cat \
  core/preamble.bash , \
  $(git ls *.bash | sort | xargs -I'{}' echo -n '{} , ') \
  core/compatibility.bash , \
  core/finalize.bash;
}

setup

compile | stripscript > "$outfile"
say "Adding Shebang..."
awk 'BEGIN{print "#!/usr/bin/env bash"} {print}' "$outfile" > tmpfile && mv tmpfile "$outfile"
run "Set Executable" chmod +x "$outfile"

say "building documentation..."
usages() { \grep '^\s*# usage:' -A 4; }
mutate() {
  sed "s/# usage:/\n$esc""[35musage:$esc""[0m/g" | \
  sed "s/# example:/$esc""[34mexample:$esc""[0m/g" | \
  sed "s/#\s*/$esc""[34m\t$esc""[0m/g"
}

compile | usages | sh_comments | nl_squeeze | mutate > ../doc/help.ansi

teardown
ok
